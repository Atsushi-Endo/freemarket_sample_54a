.register-header
 .register-header_content
  %h1
   %a
    = image_tag "top_page/header-mercari.svg", size: '193x49', alt:"mercari"

.login
 .login-sign
  .login_container_new
   %p アカウントをお持ちでない方はこちら
   = link_to "新規会員登録", "/users/sign_up/index", class: "new_btn"

 .login-field
  .login-field_form
   %button#facebook
    %i.fa.fa-facebook-square.fa-2x
    = link_to "Facebookでログイン", user_facebook_omniauth_authorize_path, method: :post
    
   %button#Google
    = image_tag "registrations_page/g-icon.png", size: '20x20', alt:"google"
    = link_to "Googleでログイン", user_google_oauth2_omniauth_authorize_path, method: :post

  = form_for user_session_path, class: "session-form" do |f|
   .form-group
    = f.email_field :email, class: "form_input", autocomplete: "email", placeholder: "メールアドレス"

   .form-group
    = f.password_field :password, class: "form_input", autocomplete: "current-password", placeholder: "パスワード"

   .form-group
    -# = recaptcha_tags
  
   .form-group
    = f.submit "ログイン", class: "login-btn"
   
   .form-forget
    = link_to "パスワードをお忘れの方", "https://www.mercari.com/jp/password/reset/start/", class: "forget_link"